<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuExample.Pages.ContactDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Id}"/>
            <Entry Text="{Binding DisplayName}"/>
            <Button Text="Salva" Clicked="OnSalvaClick"/>
            <Button Text="Annulla" Clicked="OnAnnullaClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>